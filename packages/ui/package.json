{
  "name": "@fragment_ui/ui",
  "version": "1.0.0",
  "description": "AI-native design system components based on shadcn/ui",
  "type": "module",
  "sideEffects": [
    "dist/styles.css"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./component-display": {
      "import": "./dist/component-display/index.js",
      "require": "./dist/component-display/index.js",
      "types": "./dist/component-display/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/blazejrzepa/fragment-ui.git",
    "directory": "packages/ui"
  },
  "homepage": "https://fragment-ui.dev",
  "bugs": "https://github.com/blazejrzepa/fragment-ui/issues",
  "license": "MIT",
  "keywords": [
    "react",
    "ui",
    "components",
    "design-system",
    "shadcn",
    "tailwind",
    "radix-ui",
    "accessible",
    "typescript"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "build": "tsc -p tsconfig.json && cp src/styles.css dist/styles.css",
    "watch": "tsc -p tsconfig.json --watch",
    "type-check": "tsc --noEmit",
    "test": "NODE_ENV=test vitest run --no-coverage --reporter=basic --no-watch --bail=0",
    "test:ci": "bash scripts/run-tests-ci.sh",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.8",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@radix-ui/react-visually-hidden": "^1.2.3",
    "clsx": "^2.0.0",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.552.0",
    "react": "^18.3.0",
    "react-colorful": "^5.6.1",
    "react-day-picker": "^9.11.1",
    "react-dom": "^18.3.0",
    "sonner": "^1.5.0",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-actions": "^8.6.14",
    "@storybook/addon-backgrounds": "^8.6.14",
    "@storybook/addon-controls": "^8.6.14",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-highlight": "^8.6.14",
    "@storybook/addon-measure": "^8.6.14",
    "@storybook/addon-outline": "^8.6.14",
    "@storybook/addon-toolbars": "^8.6.14",
    "@storybook/addon-viewport": "^8.6.14",
    "@storybook/core": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^2.0.0",
    "autoprefixer": "^10.4.18",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.21",
    "vitest": "^2.0.0",
    "vitest-axe": "^0.1.0"
  }
}
