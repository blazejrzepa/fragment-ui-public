{
  "name": "@fragment_ui/blocks",
  "version": "1.0.0",
  "description": "Pre-built screen compositions and blocks for Fragment UI",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./link-card": {
      "import": "./dist/link-card.js",
      "require": "./dist/link-card.js",
      "types": "./dist/link-card.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/blazejrzepa/fragment-ui.git",
    "directory": "packages/blocks"
  },
  "homepage": "https://fragment-ui.dev",
  "bugs": "https://github.com/blazejrzepa/fragment-ui/issues",
  "license": "MIT",
  "keywords": [
    "react",
    "blocks",
    "components",
    "design-system",
    "fragment-ui",
    "layouts",
    "screens"
  ],
  "peerDependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "next": ">=13.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "dependencies": {
    "@fragment_ui/ui": "workspace:*",
    "clsx": "^2.0.0",
    "lucide-react": "^0.552.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.5.0"
  }
}

