{
  "name": "fragment-ui",
  "displayName": "Fragment UI",
  "private": true,
  "description": "IntelliSense, snippets, and tools for Fragment UI components",
  "version": "0.2.0",
  "publisher": "fragment-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/blazejrzepa/fragment-ui"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "fragment-ui",
    "react",
    "components",
    "design-system",
    "ui",
    "autocomplete"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fragment-ui.addComponent",
        "title": "Fragment UI: Add Component"
      },
      {
        "command": "fragment-ui.openDocs",
        "title": "Fragment UI: Open Documentation"
      },
      {
        "command": "fragment-ui.openStorybook",
        "title": "Fragment UI: Open Storybook"
      },
      {
        "command": "fragment-ui.searchComponents",
        "title": "Fragment UI: Search Components"
      },
      {
        "command": "fragment-ui.openInPlayground",
        "title": "Fragment UI: Open in Playground"
      },
      {
        "command": "fragment-ui.copyComponentCode",
        "title": "Fragment UI: Copy Component Code"
      }
    ],
    "snippets": [
      {
        "language": "typescriptreact",
        "path": "./snippets/components.code-snippets"
      },
      {
        "language": "javascriptreact",
        "path": "./snippets/components.code-snippets"
      },
      {
        "language": "typescript",
        "path": "./snippets/components.code-snippets"
      },
      {
        "language": "javascript",
        "path": "./snippets/components.code-snippets"
      }
    ],
    "configuration": {
      "title": "Fragment UI",
      "properties": {
        "fragment-ui.storybookUrl": {
          "type": "string",
          "default": "https://6908c46a37e9c1c1fe40b48d-wcgdsyfvpg.chromatic.com",
          "description": "Storybook URL for Fragment UI"
        },
        "fragment-ui.docsUrl": {
          "type": "string",
          "default": "https://fragment-ui.dev",
          "description": "Documentation URL for Fragment UI"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc && node scripts/copy-registry.js",
    "watch": "tsc -watch",
    "package": "vsce package --no-dependencies --allow-missing-repository",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^2.22.0"
  }
}

