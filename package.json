{
  "name": "fragment-ui",
  "version": "0.1.0",
  "private": false,
  "description": "AI-native design system components based on shadcn/ui",
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "publicHoistPattern": [
      "*storybook*",
      "*vite*",
      "*tsx*",
      "*typescript*"
    ]
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:www": "pnpm --filter fragment-www dev",
    "build": "turbo run build",
    "type-check": "turbo run type-check",
    "type-check:ui": "pnpm --filter @fragment_ui/ui type-check",
    "type-check:blocks": "pnpm --filter @fragment_ui/blocks type-check",
    "type-check:www": "pnpm --filter fragment-www type-check",
    "watch": "turbo run watch --parallel",
    "watch:ui": "pnpm --filter @fragment_ui/ui watch",
    "watch:blocks": "pnpm --filter @fragment_ui/blocks watch",
    "lint": "turbo run lint",
    "test": "turbo run test --parallel",
    "test:ui": "pnpm --filter @fragment_ui/ui test",
    "tokens:build": "pnpm -F @fragment_ui/tokens run build",
    "registry:generate": "node scripts/build/generate-registry-json.mjs",
    "registry:v0": "node scripts/generate-registry-v0.mjs",
    "storybook": "pnpm -C packages/ui storybook"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@changesets/cli": "^2.29.8",
    "@figma/code-connect": "^1.3.8",
    "@typescript-eslint/parser": "^8.46.3",
    "@typescript-eslint/typescript-estree": "^8.46.3",
    "autoprefixer": "^10.4.18",
    "esbuild": "0.21.5",
    "eslint": "^9.0.0",
    "prettier": "^3.2.0",
    "storybook": "^8.6.14",
    "tsx": "^4.16.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0",
    "vitest-axe": "^0.1.0"
  },
  "dependencies": {
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blazejrzepa/fragment-ui.git"
  },
  "homepage": "https://fragmentui.com",
  "bugs": "https://github.com/blazejrzepa/fragment-ui/issues",
  "license": "MIT",
  "keywords": [
    "react",
    "ui",
    "components",
    "design-system",
    "shadcn",
    "tailwind",
    "radix-ui",
    "accessible",
    "typescript",
    "ai",
    "mcp"
  ]
}

